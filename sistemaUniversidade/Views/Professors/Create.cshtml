                        @Html.EnumDropDownListFor(model => model.Formacao, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Formacao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
