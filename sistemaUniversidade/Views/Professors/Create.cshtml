@model sistemaUniversidade.Models.Professor

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<div class="col-md-8">
    <div class="card card-user">
        <div class="card-header">
            <div>
                @Html.ActionLink("Voltar", "Index")
