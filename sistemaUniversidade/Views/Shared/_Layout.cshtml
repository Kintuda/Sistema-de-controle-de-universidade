<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
      Sistema de universiade
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="">
    <div class="wrapper ">
        <div class="sidebar" data-color="white" data-active-color="danger">
            <div class="logo">
                <a href="@Url.Action("index", "Home", new { id = "homeLink" })" class="simple-text logo-mini">
                    <div class="logo-image-small">
                        <img src="https://banner2.kisspng.com/20180612/toz/kisspng-logo-service-emblem-badge-merritt-college-5b2001471d88f7.664551241528824135121.jpg">
                    </div>
                </a>
                <a href="@Url.Action("index", "Home", new { id = "homeLink" })" class="simple-text logo-normal">
                    Sistema universidade FooBar
                </a>
                    @Html.Partial("_LoginPartial")
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="active ">
                        <a href="@Url.Action("index", "Home", new { id = "homeLink" })">
                            <i class="nc-icon nc-bank"></i>
                            <p>Home</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("index", "Estudantes", new { id = "estudanteLink" })">
                            <i class="nc-icon nc-circle-10"></i>
                            <p>Estudantes</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("index", "Cursoes", new { id = "cursosLink" })">
                            <i class="nc-icon nc-layout-11"></i>
                            <p>Cursos</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("index", "Professors", new { id = "professoresLink" })">
                            <i class="nc-icon nc-badge"></i>
                            <p>Professores</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("index", "Departamentos", new { id = "departamentoLink" })">
                            <i class="nc-icon nc-atom"></i>
                            <p>Departamento</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                                @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dashboard")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            // Javascript method's body can be found in assets/assets-for-demo/js/demo.js
            demo.initChartsPages();
        });
    </script>
</body>

</html>
